<h1>Reset Password</h1>
<% if (error) { %>
    <p style="color: red;">
        <%= error %>
    </p>
    <% } else if (message) { %>
        <p style="color: green;">
            <%= message %>
        </p>
        <% } %>
            <form action="/auth/reset-password" method="POST">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
                <button type="submit">Send Reset Link</button>
            </form>