<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
<style>
  /* Global Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Roboto', sans-serif;
    background-color: #f4f6f9;
    color: #333;
    padding: 20px;
  }

  h1 {
    font-size: 2rem;
    color: #0078e8;
    margin-bottom: 20px;
  }

  h2 {
    font-size: 1.5rem;
    color: #333;
    margin-top: 20px;
    margin-bottom: 10px;
  }

  p {
    font-size: 1rem;
    color: #555;
    margin-bottom: 10px;
  }

  p strong {
    font-weight: bold;
  }

  .error {
    color: red;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .summary-container {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
  }

  .button-container {
    display: flex;
    gap: 15px;
    margin-top: 20px;
  }

  button {
    padding: 10px 20px;
    background-color: #0078e8;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.2s;
  }

  button:hover {
    background-color: #005bb5;
    transform: translateY(-2px);
  }

  button:active {
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 1.8rem;
    }

    h2 {
      font-size: 1.3rem;
    }

    p {
      font-size: 0.95rem;
    }

    .button-container {
      flex-direction: column;
    }

    button {
      width: 100%;
      padding: 12px;
      font-size: 1.1rem;
    }
  }
</style>
<h1>Welcome, <%= user.user_name %>!</h1>

<% if (error) { %>
  <p class="error">
    <%= error %>
  </p>
  <% } %>

    <div class="summary-container">
      <h2>Lifetime Summary</h2>
      <p><strong>Total Received:</strong>
        <%= totalReceived %>
      </p>
      <p><strong>Total Expense:</strong>
        <%= totalLoss %>
      </p>
      <p><strong>Remaining Amount:</strong>
        <%= remainingAmount %>
      </p>
    </div>

    <div class="summary-container">
      <h2>Current Month Summary</h2>
      <p><strong>Total Received:</strong>
        <%= totalReceivedMonth %>
      </p>
      <p><strong>Total Expense:</strong>
        <%= totalLossMonth %>
      </p>
      <p><strong>Remaining Amount:</strong>
        <%= remainingAmountMonth %>
      </p>
    </div>

    <div class="button-container">
      <a href="/transaction_form">
        <button type="button">Add Transaction</button>
      </a>
      <a href="/history">
        <button type="button">History</button>
      </a>
    </div>