<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
<style>
    /* Global Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f6f9;
        color: #333;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    h1 {
        font-size: 2rem;
        color: #0078e8;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 450px;
        box-sizing: border-box;
    }

    label {
        font-size: 1rem;
        color: #555;
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="email"],
    input[type="date"],
    input[type="password"],
    select {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    input[type="text"]:focus,
    input[type="email"]:focus,
    input[type="date"]:focus,
    input[type="password"]:focus,
    select:focus {
        border-color: #0078e8;
        background-color: #fff;
    }

    .error {
        color: red;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
    }

    button {
        width: 100%;
        padding: 12px;
        background-color: #0078e8;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
    }

    button:hover {
        background-color: #005bb5;
        transform: translateY(-2px);
    }

    button:active {
        transform: translateY(0);
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 1.8rem;
        }

        .form-container {
            padding: 20px;
            width: 90%;
        }

        label {
            font-size: 0.95rem;
        }

        input[type="text"],
        input[type="email"],
        input[type="date"],
        input[type="password"],
        select {
            padding: 12px;
            font-size: 1.1rem;
        }

        button {
            font-size: 1.2rem;
        }
    }
</style>

<div class="form-container">
    <h1>Signup</h1>

    <% if (error) { %>
        <p class="error">
            <%= error %>
        </p>
        <% } %>

            <form action="/auth/signup" method="post">
                <label for="user_name">Full Name:</label>
                <input type="text" id="user_name" name="user_name"
                    value="<%= form_data ? form_data.user_name : '' %>"><br>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= form_data ? form_data.email : '' %>"><br>

                <label for="dob">Date of Birth:</label>
                <input type="date" id="dob" name="dob" value="<%= form_data ? form_data.dob : '' %>"><br>

                <label for="password">Password:</label>
                <input type="password" id="password" name="password"><br>

                <label for="position">Position:</label>
                <select id="position" name="position">
                    <option value="professional" <%=form_data && form_data.position==='professional' ? 'selected' : ''
                        %>>Professional</option>
                    <option value="student" <%=form_data && form_data.position==='student' ? 'selected' : '' %>>Student
                    </option>
                    <option value="other" <%=form_data && form_data.position==='other' ? 'selected' : '' %>>Other
                    </option>
                </select><br>

                <label for="sex">Sex:</label>
                <select id="sex" name="sex">
                    <option value="male" <%=form_data && form_data.sex==='male' ? 'selected' : '' %>>Male</option>
                    <option value="female" <%=form_data && form_data.sex==='female' ? 'selected' : '' %>>Female</option>
                    <option value="other" <%=form_data && form_data.sex==='other' ? 'selected' : '' %>>Other</option>
                </select><br>

                <button type="submit">Signup</button>
            </form>
            <p>If you already have an account, <a href="/auth/login">click here</a> to log in.</p>
</div>