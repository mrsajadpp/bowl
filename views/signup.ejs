<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

<div class="form-container">
    <h1>Signup</h1>

    <% if (error) { %>
        <p class="error">
            <%= error %>
        </p>
        <% } %>

            <form action="/auth/signup" method="post">
                <label for="user_name">Full Name:</label>
                <input type="text" id="user_name" name="user_name"
                    value="<%= form_data ? form_data.user_name : '' %>"><br>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= form_data ? form_data.email : '' %>"><br>

                <label for="dob">Date of Birth:</label>
                <input type="date" id="dob" name="dob" value="<%= form_data ? form_data.dob : '' %>"><br>

                <label for="password">Password:</label>
                <input type="password" id="password" name="password"><br>

                <label for="position">Position:</label>
                <select id="position" name="position">
                    <option value="professional" <%=form_data && form_data.position==='professional' ? 'selected' : ''
                        %>>Professional</option>
                    <option value="student" <%=form_data && form_data.position==='student' ? 'selected' : '' %>>Student
                    </option>
                    <option value="other" <%=form_data && form_data.position==='other' ? 'selected' : '' %>>Other
                    </option>
                </select><br>

                <label for="sex">Sex:</label>
                <select id="sex" name="sex">
                    <option value="male" <%=form_data && form_data.sex==='male' ? 'selected' : '' %>>Male</option>
                    <option value="female" <%=form_data && form_data.sex==='female' ? 'selected' : '' %>>Female</option>
                    <option value="other" <%=form_data && form_data.sex==='other' ? 'selected' : '' %>>Other</option>
                </select><br>

                <button type="submit">Signup</button>
            </form>
            <p>If you already have an account, <a href="/auth/login">click here</a> to log in.</p>
</div>